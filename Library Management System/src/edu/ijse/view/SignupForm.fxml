                        <Font size="13.0" />
                    </font>
                </Hyperlink>
            <Label layoutX="46.0" layoutY="82.0" opacity="0.32" text="Full Name" />
            <TextField fx:id="txtEmail" layoutX="46.0" layoutY="159.0" prefHeight="30.0" prefWidth="220.0" styleClass="textfield" stylesheets="@style/login.css">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="46.0" layoutY="141.0" opacity="0.32" text="Email" />
            <TextField fx:id="txtUsername" layoutX="46.0" layoutY="217.0" prefHeight="30.0" prefWidth="220.0" styleClass="textfield" stylesheets="@style/login.css">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="46.0" layoutY="199.0" opacity="0.32" text="Username" />
            <Label layoutX="46.0" layoutY="254.0" opacity="0.32" text="Password" />
