<AnchorPane fx:id="signupContext" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.UIController.SignupFormController">
    <children>
        <AnchorPane prefHeight="440.0" prefWidth="371.0" styleClass="left-form" stylesheets="@style/login.css">
            <children>
                <FontAwesomeIcon fill="WHITE" glyphName="BOOK" layoutX="108.0" layoutY="193.0" size="10em" />
                <Label layoutX="74.0" layoutY="241.0" text="Library Management System " textFill="#fafafa">
                    <font>
                        <Font name="Arial Bold" size="16.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="371.0" prefHeight="440.0" prefWidth="302.0">
            <children>
                <Label layoutX="83.0" layoutY="29.0" text="Register Form">
                    <font>
                        <Font name="Arial Bold" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="txtName" layoutX="46.0" layoutY="100.0" prefHeight="30.0" prefWidth="220.0" styleClass="textfield" stylesheets="@style/login.css">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="txtPassword" layoutX="46.0" layoutY="272.0" prefHeight="30.0" prefWidth="220.0" styleClass="textfield" stylesheets="@style/login.css">
