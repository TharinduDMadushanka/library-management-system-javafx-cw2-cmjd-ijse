<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginContext" prefHeight="440.0" prefWidth="675.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.UIController.LoginFormController">
   <children>
      <AnchorPane prefHeight="440.0" prefWidth="371.0" styleClass="left-form" stylesheets="@style/login.css">
         <children>
            <FontAwesomeIcon fill="WHITE" glyphName="BOOK" layoutX="108.0" layoutY="193.0" size="10em" />
            <Label layoutX="74.0" layoutY="241.0" text="Library Management System " textFill="#fafafa">
               <font>
                  <Font name="Arial Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="371.0" prefHeight="440.0" prefWidth="302.0">
         <children>
            <FontAwesomeIcon glyphName="USER" layoutX="132.0" layoutY="86.0" size="4em" />
            <Label layoutX="82.0" layoutY="107.0" text="Loging Admin">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="txtUserName" layoutX="40.0" layoutY="166.0" prefHeight="30.0" prefWidth="220.0" promptText="Username" styleClass="textfield" stylesheets="@style/login.css">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <PasswordField fx:id="txtPassword" layoutX="40.0" layoutY="213.0" prefHeight="30.0" prefWidth="220.0" promptText="Password" styleClass="textfield" stylesheets="@style/login.css">
               <font>
                  <Font size="14.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnLogin" layoutX="41.0" layoutY="271.0" mnemonicParsing="false" onAction="#loginOnAction" prefHeight="40.0" prefWidth="220.0" styleClass="login-btn" stylesheets="@style/login.css" text="Login">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Label layoutX="14.0" layoutY="397.0" text="Don't have an account?">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Hyperlink fx:id="signupLink" layoutX="168.0" layoutY="394.0" onAction="#signupOnAction" text="Signup">
               <font>
                  <Font size="13.0" />
               </font>
            </Hyperlink>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
